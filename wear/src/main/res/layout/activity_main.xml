<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clipChildren="false"
    tools:context="com.mattaniahbeezy.hangup.MainActivity"
    tools:deviceIds="wear">

    <ImageView
        android:id="@+id/contactImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#26000000" />

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/hello_world"
        style="@style/TextAppearance.Wearable.Medium"
        android:textColor="@color/white" />


    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_call_end_white_24dp" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_volume_down_white_24dp" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_volume_up_white_24dp" />

    <com.mattaniahbeezy.hangup.FourSideSlideLayout
        android:id="@+id/fourSideSlide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

</RelativeLayout>
